@model List<ECommerce.Models.CategoryDto>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3>@Html.ActionLink("Add Category","AddCategory","Category")</h3>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="/category/AddCategory/@item.Id">Edit</a>
                <a href="/category/DeleteCategory/@item.Id">Delete</a>
                
            </td>
        </tr>
    }
</table>